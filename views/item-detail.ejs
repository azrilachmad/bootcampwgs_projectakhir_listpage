<div class="container-mt3">
    <div class="row">
      <div class="col-md-8">
        <h2>Item Detail :</h2>
  
        <% if (!model) { %>
        <div class="alert alert-danger fw-bold" role="alert">
          Item Not Found. <a href="/users/item-list" class="alert-link fw-light"><br>Back to item list.</a>
        </div>
        <% } else {%>
  
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <img
                  class="card-img-top"
                  src="/images/products/<%= model.item_image %> "
                  alt="Card image"
                  style="width: 250px; height: 250px"
                />
            <h5 class="card-title"><b>Product Name: </b> <%= model.item_name %> </h5>
            <h6 class="card-subtitle mb-2 "><b>Category: </b> <%= model.category %> </h6>
            <p class="card-text"><b>Price: </b><%= model.price %> </p>
            <a class="btn btn-primary badge rounded-pill" href="/users/item-list " role="button">Back</a>
            <a class="btn btn-warning badge rounded-pill" href="/contact/edit/<%= model.name %>" role="button">Edit</a>
            <a onclick="return confirm('Are you sure?')" class="btn btn-danger badge rounded-pill" href="/contact/delete/<%= model.name %>" role="button">Delete</a>
          </div>
        </div>
        <% } %> 
      </div>
    </div>
  </div>